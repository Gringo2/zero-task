{
  "name": "zero-task-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web:dev": "npm run dev -w apps/web",
    "web:build": "npm run build -w apps/web",
    "server:dev": "npm run dev -w apps/server",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "dev": "npm run db:up && npm run server:dev & npm run web:dev",
    "test": "npm test --workspaces",
    "docs:serve": "powershell -ExecutionPolicy Bypass -File scripts/serve-docs.ps1"
  }
}