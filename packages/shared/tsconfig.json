{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "composite": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ]
}